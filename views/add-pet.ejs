<div class="h-screen bg-background text-white p-6 pt-12 flex flex-col">
    <!-- Header -->
    <div class="flex items-center gap-4 mb-8">
        <a href="/" class="p-2 bg-white/10 rounded-full">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
        </a>
        <h1 class="text-xl font-bold">반려동물 등록</h1>
    </div>

    <!-- Form -->
    <form action="/pets" method="POST" class="flex-1 flex flex-col gap-6">

        <!-- Name -->
        <div class="glass rounded-2xl p-4 flex items-center gap-4">
            <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
            </div>
            <div class="flex-1">
                <label class="block text-xs text-white/50 font-bold mb-1">이름</label>
                <input type="text" name="name" required
                    class="w-full bg-transparent border-none p-0 text-white placeholder-white/20 focus:ring-0 text-lg font-bold"
                    placeholder="예: 멍멍이">
            </div>
        </div>

        <!-- Breed -->
        <div class="glass rounded-2xl p-4 flex items-center gap-4">
            <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z">
                    </path>
                </svg>
            </div>
            <div class="flex-1">
                <label class="block text-xs text-white/50 font-bold mb-1">품종</label>
                <input type="text" name="breed" required
                    class="w-full bg-transparent border-none p-0 text-white placeholder-white/20 focus:ring-0 text-lg font-bold"
                    placeholder="예: 말티즈">
            </div>
        </div>

        <!-- Gender (Segmented Control) -->
        <div>
            <label class="block text-xs text-white/50 font-bold mb-2 ml-4">성별</label>
            <div class="glass rounded-2xl p-1 flex relative">
                <!-- Inputs (Hidden) -->
                <input type="radio" name="gender" value="male" id="gender-male" class="peer/male hidden" checked>
                <input type="radio" name="gender" value="female" id="gender-female" class="peer/female hidden">

                <!-- Labels -->
                <label for="gender-male"
                    class="flex-1 py-3 text-center rounded-xl cursor-pointer transition-all peer-checked/male:bg-primary peer-checked/male:font-bold peer-checked/male:shadow-lg text-white/50 peer-checked/male:text-white">
                    남아
                </label>
                <label for="gender-female"
                    class="flex-1 py-3 text-center rounded-xl cursor-pointer transition-all peer-checked/female:bg-pink-500 peer-checked/female:font-bold peer-checked/female:shadow-lg text-white/50 peer-checked/female:text-white">
                    여아
                </label>
            </div>
        </div>

        <div class="flex gap-4">
            <!-- Age -->
            <div class="flex-1 glass rounded-2xl p-4 flex items-center gap-4">
                <div class="flex-1">
                    <label class="block text-xs text-white/50 font-bold mb-1">나이</label>
                    <div class="flex items-end gap-2">
                        <input type="number" name="age" required
                            class="w-full bg-transparent border-none p-0 text-white placeholder-white/20 focus:ring-0 text-lg font-bold"
                            placeholder="0">
                        <span class="text-sm font-bold text-white/50 mb-0.5">살</span>
                    </div>
                </div>
            </div>

            <!-- Weight -->
            <div class="flex-1 glass rounded-2xl p-4 flex items-center gap-4">
                <div class="flex-1">
                    <label class="block text-xs text-white/50 font-bold mb-1">몸무게</label>
                    <div class="flex items-end gap-2">
                        <input type="number" step="1" name="weight" required
                            class="w-full bg-transparent border-none p-0 text-white placeholder-white/20 focus:ring-0 text-lg font-bold"
                            placeholder="0">
                        <span class="text-sm font-bold text-white/50 mb-0.5">kg</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Submit -->
        <button type="submit"
            class="mt-auto mb-8 w-full bg-primary text-white font-bold py-4 rounded-xl shadow-lg shadow-primary/30 transition-transform active:scale-95">
            등록완료
        </button>
        </button>
    </form>

    <% if (typeof error !=='undefined' && error) { %>
        <script>
            alert("<%= error %>");
        </script>
        <% } %>
</div>