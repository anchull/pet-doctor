<div class="p-6 pt-12">
    <!-- Header -->
    <header class="flex justify-between items-start mb-8">
        <div>
            <p class="text-gray-400 text-sm mb-1">안녕하세요,</p>
            <h1 class="text-3xl font-bold">
                <%= pets.length> 0 ? pets[0].name : 'Pet' %> <br>
                    검사할 준비 되셨나요?
            </h1>
        </div>
        <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center border border-white/20">
            <span class="text-xs font-bold">Lab</span>
        </div>
    </header>

    <!-- Pet Selector (Horizontal Scroll) -->
    <% if (pets.length> 0) { %>
        <div class="mb-8">
            <div class="flex overflow-x-auto hide-scrollbar -mx-6 px-6 pb-4">
                <% pets.forEach((pet, index)=> { %>
                    <div class="flex-shrink-0 mr-4 flex flex-col items-center gap-2">
                        <div
                            class="w-16 h-16 rounded-full flex items-center justify-center border-2 <%= index === 0 ? 'border-primary bg-primary text-white' : 'border-white/20 bg-white/5 text-gray-400' %> shadow-lg">
                            <span class="text-xl font-bold">
                                <%= pet.name[0] %>
                            </span>
                        </div>
                        <span class="<%= index === 0 ? 'text-primary font-bold' : 'text-gray-400' %> text-sm">
                            <%= pet.name %>
                        </span>
                    </div>
                    <% }) %>

                        <!-- Link to Add Pet -->
                        <a href="/new" class="flex-shrink-0 mr-4 flex flex-col items-center gap-2 group">
                            <div
                                class="w-16 h-16 rounded-full flex items-center justify-center border-2 border-dashed border-white/30 bg-white/5 text-gray-400 group-hover:border-primary group-hover:text-primary transition-colors">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M12 4v16m8-8H4"></path>
                                </svg>
                            </div>
                            <span class="text-gray-400 text-sm">추가</span>
                        </a>
            </div>
        </div>
        <% } %>

            <!-- AI Analysis Card -->
            <div class="w-full glass rounded-3xl p-6 relative overflow-hidden mb-8">
                <div class="absolute top-0 right-0 w-32 h-32 bg-primary/20 rounded-full blur-2xl -mr-10 -mt-10"></div>

                <div class="relative z-10">
                    <div
                        class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-primary/30 text-primary text-xs font-bold mb-4 border border-primary/20">
                        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                            <path
                                d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z">
                            </path>
                        </svg>
                        AI Analysis
                    </div>

                    <h2 class="text-2xl font-bold mb-2">정밀 소변 검사</h2>
                    <p class="text-gray-400 text-sm mb-8 leading-relaxed">
                        AI가 분석하는 10가지 건강 지표<br>
                        지금 바로 확인하세요
                    </p>

                    <a href="/scan"
                        class="block w-full py-4 bg-white text-gray-900 rounded-xl font-bold text-lg hover:bg-gray-100 transition-colors shadow-lg text-center">
                        검사 시작하기
                    </a>
                </div>
            </div>

            <!-- Recent Results Header -->
            <div class="flex justify-between items-end px-1">
                <h3 class="text-lg font-bold">최근 분석 결과</h3>
                <button class="text-sm text-gray-400">전체보기</button>
            </div>
</div>