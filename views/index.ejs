<div class="p-6 pt-12 pb-32">
    <!-- Header -->
    <header class="flex justify-between items-start mb-8">
        <div>
            <p class="text-gray-400 text-sm mb-1">안녕하세요,</p>
            <h1 class="text-3xl font-bold" id="headerPetName">
                <%= selectedPet ? selectedPet.name : 'Pet' %> <br>
                    검사할 준비 되셨나요?
            </h1>
        </div>
        <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center border border-white/20">
            <span class="text-xs font-bold">Lab</span>
        </div>
    </header>

    <!-- Pet Selector (Horizontal Scroll) -->
    <% if (pets.length> 0) { %>
        <div class="mb-8">
            <div class="flex overflow-x-auto hide-scrollbar -mx-6 px-6 pb-4">
                <% pets.forEach((pet, index)=> {
                    const isSelected = selectedPet && pet.id === selectedPet.id;
                    %>
                    <button type="button"
                        class="pet-selector flex-shrink-0 mr-4 flex flex-col items-center gap-2 cursor-pointer"
                        data-pet-id="<%= pet.id %>" data-pet-name="<%= pet.name %>" data-pet-breed="<%= pet.breed %>"
                        data-pet-age="<%= pet.age %>" data-pet-weight="<%= pet.weight %>"
                        data-pet-gender="<%= pet.gender %>">
                        <div
                            class="pet-circle w-16 h-16 rounded-full flex items-center justify-center border-2 <%= isSelected ? 'border-primary bg-primary text-white' : 'border-white/20 bg-white/5 text-gray-400' %> shadow-lg transition-all">
                            <span class="text-xl font-bold">
                                <%= pet.name[0] %>
                            </span>
                        </div>
                        <span
                            class="pet-name <%= isSelected ? 'text-primary font-bold' : 'text-gray-400' %> text-sm transition-colors">
                            <%= pet.name %>
                        </span>
                    </button>
                    <% }) %>

                        <!-- Link to Add Pet -->
                        <a href="/new" class="flex-shrink-0 mr-4 flex flex-col items-center gap-2 group">
                            <div
                                class="w-16 h-16 rounded-full flex items-center justify-center border-2 border-dashed border-white/30 bg-white/5 text-gray-400 group-hover:border-primary group-hover:text-primary transition-colors">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M12 4v16m8-8H4"></path>
                                </svg>
                            </div>
                            <span class="text-gray-400 text-sm">추가</span>
                        </a>
            </div>
        </div>
        <% } %>

            <!-- Selected Pet Info Card -->
            <% if (selectedPet) { %>
                <div id="petInfoCard" class="glass p-4 rounded-2xl mb-6 flex items-center gap-4">
                    <div class="w-14 h-14 rounded-full bg-primary/20 flex items-center justify-center text-primary">
                        <span class="text-2xl font-bold" id="petInfoInitial">
                            <%= selectedPet.name[0] %>
                        </span>
                    </div>
                    <div class="flex-1">
                        <h3 class="font-bold text-lg" id="petInfoName">
                            <%= selectedPet.name %>
                        </h3>
                        <p class="text-xs text-gray-400">
                            <span id="petInfoBreed">
                                <%= selectedPet.breed %>
                            </span> •
                            <span id="petInfoAge">
                                <%= selectedPet.age %>
                            </span>살 •
                            <span id="petInfoWeight">
                                <%= selectedPet.weight %>
                            </span>kg
                        </p>
                    </div>
                    <a href="/my/pets" class="text-xs text-primary">관리 →</a>
                </div>
                <% } %>

                    <!-- AI Analysis Card -->
                    <div class="w-full glass rounded-3xl p-6 relative overflow-hidden mb-8">
                        <div class="absolute top-0 right-0 w-32 h-32 bg-primary/20 rounded-full blur-2xl -mr-10 -mt-10">
                        </div>

                        <div class="relative z-10">
                            <div
                                class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-primary/30 text-primary text-xs font-bold mb-4 border border-primary/20">
                                <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                                    <path
                                        d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z">
                                    </path>
                                </svg>
                                AI Analysis
                            </div>

                            <h2 class="text-2xl font-bold mb-2">정밀 소변 검사</h2>
                            <p class="text-gray-400 text-sm mb-8 leading-relaxed">
                                AI가 분석하는 10가지 건강 지표<br>
                                지금 바로 확인하세요
                            </p>

                            <a href="/scan"
                                class="block w-full py-4 bg-white text-gray-900 rounded-xl font-bold text-lg hover:bg-gray-100 transition-colors shadow-lg text-center">
                                검사 시작하기
                            </a>
                        </div>
                    </div>

                    <!-- Recent Results Header -->
                    <div class="flex justify-between items-end px-1">
                        <h3 class="text-lg font-bold">최근 분석 결과</h3>
                        <a href="/history" class="text-sm text-gray-400">전체보기</a>
                    </div>
</div>

<script>
    document.querySelectorAll('.pet-selector').forEach(btn => {
        btn.addEventListener('click', function () {
            const petId = this.dataset.petId;
            const petName = this.dataset.petName;

            // Update circles visually
            document.querySelectorAll('.pet-selector').forEach(b => {
                const circle = b.querySelector('.pet-circle');
                const name = b.querySelector('.pet-name');
                circle.classList.remove('border-primary', 'bg-primary', 'text-white');
                circle.classList.add('border-white/20', 'bg-white/5', 'text-gray-400');
                name.classList.remove('text-primary', 'font-bold');
                name.classList.add('text-gray-400');
            });

            // Highlight selected
            const circle = this.querySelector('.pet-circle');
            const nameSpan = this.querySelector('.pet-name');
            circle.classList.remove('border-white/20', 'bg-white/5', 'text-gray-400');
            circle.classList.add('border-primary', 'bg-primary', 'text-white');
            nameSpan.classList.remove('text-gray-400');
            nameSpan.classList.add('text-primary', 'font-bold');

            // Update header
            document.getElementById('headerPetName').innerHTML = petName + '<br>검사할 준비 되셨나요?';

            // Update info card
            document.getElementById('petInfoInitial').textContent = petName[0];
            document.getElementById('petInfoName').textContent = petName;
            document.getElementById('petInfoBreed').textContent = this.dataset.petBreed;
            document.getElementById('petInfoAge').textContent = this.dataset.petAge;
            document.getElementById('petInfoWeight').textContent = this.dataset.petWeight;

            // Save selection to server
            fetch('/pets/select/' + petId, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            });
        });
    });
</script>