<div class="p-6 pt-12 flex flex-col min-h-screen">
    <!-- Header -->
    <div class="flex items-center gap-4 mb-6">
        <a href="/history" class="p-2 bg-white/10 rounded-full">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
        </a>
        <h1 class="text-xl font-bold">검사 상세</h1>
    </div>

    <!-- Info Card -->
    <div class="glass p-6 rounded-3xl mb-8 flex items-center justify-between">
        <div>
            <h2 class="text-gray-400 font-bold text-sm mb-1">검사 일시</h2>
            <div class="text-xl font-bold text-white">
                <%= record.date %>
            </div>
        </div>
        <div class="text-right">
            <h2 class="text-gray-400 font-bold text-sm mb-1">종합 점수</h2>
            <div class="text-2xl font-bold <%= record.score >= 80 ? 'text-green-400' : 'text-red-400' %>">
                <%= record.score %>점
            </div>
        </div>
    </div>

    <!-- Details -->
    <h3 class="font-bold text-lg mb-4">상세 항목</h3>
    <div class="flex-1 space-y-3 overflow-y-auto hide-scrollbar pb-32">
        <% record.results.forEach(item=> { %>
            <div class="glass p-4 rounded-2xl flex items-center justify-between">
                <div>
                    <h4 class="font-bold text-sm text-gray-300">
                        <%= item.name %>
                    </h4>
                    <p class="text-xs text-gray-500">
                        <%= item.description %>
                    </p>
                </div>
                <div class="flex items-center gap-2">
                    <span class="text-sm font-bold <%= item.status === 'Normal' ? 'text-green-400' : 'text-red-400' %>">
                        <%= item.value %>
                    </span>
                    <div class="w-3 h-3 rounded-full <%= item.status === 'Normal' ? 'bg-green-500' : 'bg-red-500' %>">
                    </div>
                </div>
            </div>
            <% }) %>
    </div>
</div>