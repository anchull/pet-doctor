<div class="p-6 pt-12 flex flex-col min-h-screen">
    <!-- Header -->
    <div class="flex items-center gap-4 mb-6">
        <a href="/" class="p-2 bg-white/10 rounded-full">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </a>
        <h1 class="text-xl font-bold">검사 결과</h1>
    </div>

    <!-- Score Card -->
    <div class="glass p-8 rounded-3xl flex flex-col items-center justify-center mb-8 relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-br from-primary/20 to-transparent"></div>

        <h2 class="text-gray-400 font-bold mb-2 relative z-10">종합 건강 점수</h2>
        <div class="text-7xl font-bold text-white mb-2 relative z-10">
            <%= score %>
        </div>
        <div
            class="px-4 py-1 rounded-full text-sm font-bold relative z-10
            <%= score >= 80 ? 'bg-green-500/20 text-green-400' : score >= 60 ? 'bg-yellow-500/20 text-yellow-400' : 'bg-red-500/20 text-red-400' %>">
            <%= score>= 80 ? '건강함' : score >= 60 ? '주의 필요' : '위험' %>
        </div>
    </div>

    <!-- Details -->
    <h3 class="font-bold text-lg mb-4">상세 항목</h3>
    <div class="flex-1 space-y-3 overflow-y-auto hide-scrollbar pb-32">
        <% results.forEach(item=> { %>
            <div class="glass p-4 rounded-2xl flex items-center justify-between">
                <div>
                    <h4 class="font-bold text-sm text-gray-300">
                        <%= item.name %>
                    </h4>
                    <p class="text-xs text-gray-500">
                        <%= item.description %>
                    </p>
                </div>
                <div class="flex items-center gap-2">
                    <span class="text-sm font-bold <%= item.status === 'Normal' ? 'text-green-400' : 'text-red-400' %>">
                        <%= item.value %>
                    </span>
                    <div class="w-3 h-3 rounded-full <%= item.status === 'Normal' ? 'bg-green-500' : 'bg-red-500' %>">
                    </div>
                </div>
            </div>
            <% }) %>
    </div>

    <!-- Action -->
    <div class="fixed bottom-8 left-6 right-6 z-50">
        <a href="/"
            class="block w-full bg-primary text-white text-center font-bold py-4 rounded-xl shadow-lg shadow-primary/30 active:scale-95 transition-transform">
            확인
        </a>
    </div>
</div>